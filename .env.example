# Exemplo de .env (TEMPLATE)
# -------------------------
# NÃO coloque valores reais neste arquivo se for comitar o repositório.
# Copie este arquivo para `.env` local e preencha os valores reais no `.env`.

# Segurança
# Use uma SECRET_KEY forte (gere com: python -c "import secrets; print(secrets.token_urlsafe())")
SECRET_KEY=

# Debug / site
DEBUG=True
SITE_ID=1

# E-mail (SMTP)
# Para Gmail use smtp.gmail.com e porta 587 com TLS; use senha de app se tiver 2FA
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=

# Social (django-allauth) — deixe em branco se não usar
SOCIAL_GOOGLE_CLIENT_ID=
SOCIAL_GOOGLE_SECRET=
SOCIAL_FACEBOOK_CLIENT_ID=
SOCIAL_FACEBOOK_SECRET=
SOCIAL_APPLE_CLIENT_ID=
SOCIAL_APPLE_SECRET=
SOCIAL_APPLE_KEY_ID=
SOCIAL_APPLE_TEAM_ID=

# Outras variáveis opcionais usadas pelo projeto
LOGIN_REDIRECT_URL=/
ACCOUNT_LOGOUT_REDIRECT_URL=/
ACCOUNT_EMAIL_REQUIRED=True
ACCOUNT_USERNAME_REQUIRED=False
ACCOUNT_AUTHENTICATION_METHOD=email
ACCOUNT_EMAIL_VERIFICATION=optional
